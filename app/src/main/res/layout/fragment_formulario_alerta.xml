<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- TIPO DE SOLICITUD -->
        <TextView
            android:id="@+id/txtTipo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tipo de Solicitud"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingBottom="10dp"/>

        <!-- PLACA -->
        <EditText
            android:id="@+id/edtPlaca"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Placa"
            android:inputType="text"
            android:padding="12dp" />

        <!-- MODELO -->
        <EditText
            android:id="@+id/edtModelo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Modelo"
            android:inputType="text"
            android:padding="12dp"
            android:layout_marginTop="10dp" />

        <!-- AÑO -->
        <EditText
            android:id="@+id/edtAnio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Año de Fabricación"
            android:inputType="number"
            android:padding="12dp"
            android:layout_marginTop="10dp" />

        <!-- VIN -->
        <EditText
            android:id="@+id/edtVIN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="VIN"
            android:inputType="text"
            android:padding="12dp"
            android:layout_marginTop="10dp" />

        <!-- DESCRIPCIÓN OPCIONAL -->
        <EditText
            android:id="@+id/edtDescripcion"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:hint="Descripción (opcional)"
            android:gravity="top"
            android:padding="12dp"
            android:layout_marginTop="10dp" />

        <Button
            android:id="@+id/btnTomarFoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tomar foto" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerFotos"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:padding="6dp"
            android:orientation="horizontal" />


        <!-- BOTÓN ENVIAR -->
        <Button
            android:id="@+id/btnConfirmar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirmar y Enviar"
            android:layout_marginTop="20dp"
            android:padding="15dp" />

    </LinearLayout>
</ScrollView>