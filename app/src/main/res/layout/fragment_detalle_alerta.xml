<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

    <!-- Nombre del usuario -->
    <TextView
        android:id="@+id/txtUserName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Usuario"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Descripción -->
    <TextView
        android:id="@+id/txtDescripcion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Descripción"
        android:textSize="16sp"
        android:paddingTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/txtUserName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Fecha -->
    <TextView
        android:id="@+id/txtFecha"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Fecha"
        android:textSize="14sp"
        android:paddingTop="6dp"
        app:layout_constraintTop_toBottomOf="@id/txtDescripcion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/txtEstado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Estado"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/txtFecha"
            app:layout_constraintEnd_toEndOf="parent"
            android:paddingTop="6dp"/>

    <!-- Datos del vehículo -->
    <TextView
        android:id="@+id/txtVehiculoTitulo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Datos del Vehículo"
        android:textStyle="bold"
        android:textSize="18sp"
        android:paddingTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/txtFecha"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/txtPlaca"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Placa:"
        android:textSize="16sp"
        android:paddingTop="6dp"
        app:layout_constraintTop_toBottomOf="@id/txtVehiculoTitulo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/txtModelo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Modelo:"
        android:textSize="16sp"
        android:paddingTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/txtPlaca"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/txtAnio"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Año:"
        android:textSize="16sp"
        android:paddingTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/txtModelo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/txtVin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="VIN:"
        android:textSize="16sp"
        android:paddingTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/txtAnio"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Fotos -->
    <TextView
        android:id="@+id/txtFotosTitulo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Fotos adjuntadas"
        android:textStyle="bold"
        android:textSize="18sp"
        android:paddingTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/txtVin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerFotos"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:paddingTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/txtFotosTitulo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- MapFragment -->
    <fragment
        android:id="@+id/mapView"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="0dp"
        android:layout_height="250dp"
        app:layout_constraintTop_toBottomOf="@id/recyclerFotos"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp"/>

    <!-- Botón Llamar -->
    <Button
        android:id="@+id/btnLlamar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Llamar Cliente"
        app:layout_constraintTop_toBottomOf="@id/mapView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/btnVerRuta"
        android:text="Ver ruta en Google Maps"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/btnLlamar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <!-- Botones de estado -->
    <Button
        android:id="@+id/btnEnCamino"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="En Camino"
        app:layout_constraintTop_toBottomOf="@id/btnVerRuta"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="6dp"
        app:layout_constraintEnd_toStartOf="@id/btnEnAtencion"/>

    <Button
        android:id="@+id/btnEnAtencion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="En Atención"
        app:layout_constraintTop_toBottomOf="@id/btnVerRuta"
        app:layout_constraintStart_toEndOf="@id/btnEnCamino"
        app:layout_constraintEnd_toStartOf="@id/btnFinalizar"
        android:layout_marginTop="16dp"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="6dp"/>

    <Button
        android:id="@+id/btnFinalizar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Finalizar"
        app:layout_constraintTop_toBottomOf="@id/btnVerRuta"
        app:layout_constraintStart_toEndOf="@id/btnEnAtencion"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="6dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>